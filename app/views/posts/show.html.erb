<div class="container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<div class="comments">
  <% @comments.each do |com| %>
    <p>댓글 :<%=com.content%></p>
  <% end %>
</div>
<%= form_tag "/posts/comment/#{@post.id}", method: 'post' do %>
  <div class="field">
    <%= text_area_tag 'content' %><br>
  </div>
  <div class="actions">
    <%= submit_tag 'Submit!' %>
  </div>
<% end %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</div>